<Window x:Class="TeamTracker.CountryInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamTracker"
        xmlns:props="clr-namespace:TeamTracker.Properties"
        mc:Ignorable="d"
        Title="Country Info" Height="400" Width="300" 
          Icon="Resources/favicon.ico"
        WindowStartupLocation="CenterScreen" Foreground="WhiteSmoke">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
    </Window.Resources>
    <Grid Background="#1B262C">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.Column="0" 
               Grid.Row="0"
               Content="{x:Static props:Resources.countryName}" />
        <Label Grid.Column="1" 
               Grid.Row="0"
               x:Name="lblName"/>
        <Label Grid.Column="0"
               Grid.Row="1" 
               Content="{x:Static props:Resources.fifaCode}" />
        <Label Grid.Column="1" 
               Grid.Row="1" 
               x:Name="lblFifaCode"/>
        <Label Grid.Column="0" 
               Grid.Row="2" 
               Content="{x:Static props:Resources.gamesPlayed}" />
        <Label Grid.Column="1" 
               Grid.Row="2"
               x:Name="lblGamesPlayed"/>
        <Label Grid.Column="0" 
               Grid.Row="3" 
               Content="{x:Static props:Resources.wins}" />
        <Label Grid.Column="1" 
               Grid.Row="3"
               x:Name="lblWins"/>
        <Label Grid.Column="0" 
               Grid.Row="4" 
                Content="{x:Static props:Resources.losses}" />
        <Label Grid.Column="1" 
               Grid.Row="4" 
               x:Name="lblLoses"/>
        <Label Grid.Column="0" 
               Grid.Row="5" 
                Content="{x:Static props:Resources.draws}" />
        <Label Grid.Column="1" 
               Grid.Row="5" 
               x:Name="lblDraws"/>
        <Label Grid.Column="0" 
               Grid.Row="6" 
                Content="{x:Static props:Resources.goalsFor}" />
        <Label Grid.Column="1" 
               Grid.Row="6" 
               x:Name="lblGoalsFor"/>
        <Label Grid.Column="0" 
               Grid.Row="7" 
                Content="{x:Static props:Resources.goalsAgainst}" />
        <Label Grid.Column="1" 
               Grid.Row="7" 
               x:Name="lblGoalsAgainst"/>
        <Label Grid.Column="0" 
               Grid.Row="8" 
                Content="{x:Static props:Resources.goalsDifferential}"/>
        <Label Grid.Column="1" 
               Grid.Row="8" 
               x:Name="lblGoalDifferential"/>
    </Grid>

</Window>
