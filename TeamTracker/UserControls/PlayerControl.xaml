<UserControl x:Class="TeamTracker.UserControls.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeamTracker.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="60"  >
    <Grid x:Name="grid" 
          MouseDown="grid_MouseDown">
        <Grid.RowDefinitions>
            <RowDefinition 
                Height="3*"/>
            <RowDefinition 
                Height="Auto"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0">
            <Image Width="60" Height="60" Source="/Resources/football-shirt.png" x:Name="imgPicture" />
            <Label Content="12" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20" x:Name="lblShirtNumb"/>
        </Grid>





        <Label Grid.Row="1" 
                   Foreground="White" 
                   Background="#1B262C" 
                   FontSize="10" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   x:Name="lblName"/>


    </Grid>






</UserControl>
